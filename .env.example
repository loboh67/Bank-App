# Shared database (used by docker-compose)
POSTGRES_DB=bank_db
POSTGRES_USER=your_user
POSTGRES_PASSWORD=change_me
POSTGRES_PORT=5433

# Auth service
DB_URL=jdbc:postgresql://localhost:5433/bank_db
DB_USERNAME=your_user
DB_PASSWORD=change_me
JWT_SECRET=replace_with_strong_secret
HTTP_PORT=8082
GRPC_PORT=9090

# Enable-banking service
ENABLEBANKING_PRIVATE_KEY_PATH=/etc/enablebanking/app.pem
ENABLEBANKING_BASE_URL=https://api.enablebanking.com
ENABLEBANKING_REDIRECT_URL=http://localhost:8081/enablebanking/auth/callback
AUTH_SERVICE_GRPC_ADDRESS=static://localhost:9090
AUTH_SERVICE_GRPC_NEGOTIATION=plaintext
SERVER_PORT=8081
GRPC_SERVER_PORT=9091

# API service
AUTH_SERVICE_ADDRESS=static://localhost:9090
AUTH_SERVICE_NEGOTIATION=plaintext
AUTH_SERVICE_BASE_URL=http://localhost:8082
ENABLE_BANKING_BASE_URL=http://localhost:8081
SYNC_SERVICE_BASE_URL=http://localhost:8080
SERVER_PORT=8085

# Sync service
DATABASE_URL=jdbc:postgresql://localhost:5433/bank_db
DATABASE_USERNAME=your_user
DATABASE_PASSWORD=change_me
KAFKA_BOOTSTRAP_SERVERS=localhost:9095
KAFKA_CLIENT_ID=sync-service
ENABLE_BANKING_GRPC_ADDRESS=static://localhost:9091
ENABLE_BANKING_GRPC_NEGOTIATION_TYPE=plaintext
SERVER_PORT=8080

# iOS client (configure via build settings or plist)
IOS_API_BASE_URL=http://localhost:8085
